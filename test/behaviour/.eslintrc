{
	"rules": {
		"indent": [
			2,
			"tab", {
				"SwitchCase": 1
			}
		],
		"quotes": [
			2,
			"single"
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"semi": [
			2,
			"always"
		],
		"no-mixed-spaces-and-tabs": [
			2, "smart-tabs"
		]
	},
	"env": {
		"es6": true,
		"mocha": true,
		"node": true
	},
	"globals": {
		"browser": false,
		"expect": false,
		"baseUrl": false,
		"element": false,
		"by": false,
		"$": false,
		"$$": false
	},
	"extends": "eslint:recommended"
}